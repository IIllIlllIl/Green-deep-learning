{
  "experiment_name": "stage4_vulberta_parallel",
  "description": "阶段4: VulBERTa模型的并行实验 (预计40小时)",
  "mode": "mutation",
  "runs_per_config": 6,
  "max_retries": 2,
  "governor": "performance",
  "use_deduplication": true,
  "historical_csvs": [
    "results/summary_all.csv"
  ],
  "experiments": [
    {
      "comment": "=== VulBERTa/mlp 并行: 20个实验 (预计40小时) ===",
      "repo": "VulBERTa",
      "model": "mlp",
      "mode": "parallel",
      "foreground": {
        "repo": "VulBERTa",
        "model": "mlp",
        "mode": "mutation",
        "mutate": ["epochs"]
      },
      "background": {
        "repo": "examples",
        "model": "mnist",
        "hyperparameters": {}
      },
      "comment": "epochs需要5个唯一值,运行5次"
    },
    {
      "repo": "VulBERTa",
      "model": "mlp",
      "mode": "parallel",
      "foreground": {
        "repo": "VulBERTa",
        "model": "mlp",
        "mode": "mutation",
        "mutate": ["learning_rate"]
      },
      "background": {
        "repo": "examples",
        "model": "mnist",
        "hyperparameters": {}
      },
      "comment": "learning_rate需要5个唯一值,运行5次"
    },
    {
      "repo": "VulBERTa",
      "model": "mlp",
      "mode": "parallel",
      "foreground": {
        "repo": "VulBERTa",
        "model": "mlp",
        "mode": "mutation",
        "mutate": ["weight_decay"]
      },
      "background": {
        "repo": "examples",
        "model": "mnist",
        "hyperparameters": {}
      },
      "comment": "weight_decay需要5个唯一值,运行5次"
    },
    {
      "repo": "VulBERTa",
      "model": "mlp",
      "mode": "parallel",
      "foreground": {
        "repo": "VulBERTa",
        "model": "mlp",
        "mode": "mutation",
        "mutate": ["seed"]
      },
      "background": {
        "repo": "examples",
        "model": "mnist",
        "hyperparameters": {}
      },
      "comment": "seed需要5个唯一值,运行5次"
    }
  ]
}
