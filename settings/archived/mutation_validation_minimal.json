{
  "session_name": "mutation_validation_minimal",
  "description": "Minimal validation set to verify optimized mutation range [0.5×, 2×] for LR and [d-0.3, d+0.2] for Dropout. Only tests critical boundary points that weren't covered in boundary_test_v2.",
  "max_retries": 2,
  "base_results_dir": "results",

  "mutation_strategy": {
    "learning_rate": {
      "type": "multiplier",
      "formula": "LR_mutated = LR_default × multiplier",
      "testing_range": "[0.5×, 2.0×]"
    },
    "dropout": {
      "type": "offset",
      "formula": "Dropout_mutated = clip(Dropout_default + offset, 0, 1)",
      "testing_range": "[default-0.3, default+0.2]"
    }
  },

  "note": "This minimal set only includes NEW experiments. Results from boundary_test_v2 can be reused for comparison.",

  "experiments": [
    {
      "experiment_id": 1,
      "description": "DenseNet121 - LR 0.5× (验证推荐下界)",
      "repository": "Person_reID_baseline_pytorch",
      "model": "densenet121",
      "hyperparameters": {
        "epochs": 60,
        "learning_rate": 0.025,
        "dropout": 0.5
      },
      "expected_performance": {
        "baseline_mAP": 73.01,
        "estimated_change": "-2%",
        "estimated_mAP": "71.5%",
        "note": "内插于0.25×(-4%)和1×(0%)之间"
      }
    },
    {
      "experiment_id": 2,
      "description": "DenseNet121 - LR 2× (验证推荐上界)",
      "repository": "Person_reID_baseline_pytorch",
      "model": "densenet121",
      "hyperparameters": {
        "epochs": 60,
        "learning_rate": 0.1,
        "dropout": 0.5
      },
      "expected_performance": {
        "baseline_mAP": 73.01,
        "estimated_change": "-1% to -2%",
        "estimated_mAP": "71-72%",
        "note": "远小于4×的崩溃，应该安全"
      }
    },
    {
      "experiment_id": 3,
      "description": "DenseNet121 - Dropout +0.2 (验证Dropout上界)",
      "repository": "Person_reID_baseline_pytorch",
      "model": "densenet121",
      "hyperparameters": {
        "epochs": 60,
        "learning_rate": 0.05,
        "dropout": 0.7
      },
      "expected_performance": {
        "baseline_mAP": 73.01,
        "estimated_change": "0% to -2%",
        "estimated_mAP": "71-73%",
        "note": "0.4和0.5都接近baseline，0.7应该仍可接受"
      }
    }
  ],

  "reusable_results_from_boundary_test_v2": [
    {
      "experiment": "DenseNet121 Baseline",
      "lr_multiplier": 1.0,
      "dropout_offset": 0.0,
      "mAP": 73.01,
      "note": "可作为baseline对比"
    },
    {
      "experiment": "DenseNet121 LR 0.25×",
      "lr_multiplier": 0.25,
      "dropout_offset": 0.0,
      "mAP": 69.02,
      "note": "低于推荐下界0.5×，性能-4%"
    },
    {
      "experiment": "DenseNet121 Dropout 0.0",
      "lr_multiplier": 1.0,
      "dropout_offset": -0.5,
      "mAP": 75.42,
      "note": "低于推荐下界-0.3，性能+2.4%"
    },
    {
      "experiment": "DenseNet121 Dropout 0.4",
      "lr_multiplier": 1.0,
      "dropout_offset": -0.1,
      "mAP": 73.19,
      "note": "在推荐范围内，性能持平"
    },
    {
      "experiment": "ResNet20 Baseline",
      "lr_multiplier": 1.0,
      "accuracy": 91.70,
      "note": "可作为baseline对比"
    },
    {
      "experiment": "ResNet20 LR 0.25×",
      "lr_multiplier": 0.25,
      "accuracy": 90.86,
      "note": "低于推荐下界0.5×，性能-0.84%"
    },
    {
      "experiment": "ResNet20 LR 4×",
      "lr_multiplier": 4.0,
      "accuracy": 90.85,
      "note": "高于推荐上界2×，性能-0.85%"
    }
  ],

  "validation_criteria": {
    "success_threshold": {
      "performance_degradation": "<3%",
      "description": "If all 3 new experiments show <3% performance degradation, the optimized range is validated."
    },
    "expected_results": [
      "DenseNet LR 0.5×: mAP ≥ 71% (约-2%)",
      "DenseNet LR 2×: mAP ≥ 71% (约-2%)",
      "DenseNet Dropout 0.7: mAP ≥ 71% (约-2%)"
    ]
  },

  "time_estimate": {
    "total_experiments": 3,
    "avg_time_per_experiment": "36 minutes",
    "total_time": "108 minutes (1.8 hours)",
    "note": "Can run overnight or during work hours"
  }
}
